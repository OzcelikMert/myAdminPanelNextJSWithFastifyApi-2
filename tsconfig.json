{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["../node_modules/@types", "types", "node"],
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "types/*": ["types/*"],
      "@styles/*": ["assets/styles/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@library/*": ["library/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "../next-env.d.ts", 
    "**/*.ts", 
    "**/*.d.ts", 
    "**/*.tsx"
  ],
  "exclude": [
    "../node_modules", 
    "**/.*/"
  ]
}
